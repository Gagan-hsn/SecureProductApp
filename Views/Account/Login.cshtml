@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Login</h2>
<form asp-action="Login" method="post">
    @Html.AntiForgeryToken()
    <div>
        <label>Username</label>
        <input name="username" />
    </div>
    <div>
        <label>Password</label>
        <input name="password" type="password" />
    </div>
    <button type="submit">Login</button>
</form>
