@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Register</h2>
<form asp-action="Register" method="post">
    @Html.AntiForgeryToken()
    <div>
        <label>Username</label>
        <input name="username" />
    </div>
    <div>
        <label>Email</label>
        <input name="email" />
    </div>
    <div>
        <label>Password</label>
        <input name="password" type="password" />
    </div>
    <button type="submit">Register</button>
</form>
